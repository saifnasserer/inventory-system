{
    "name": "inventory-backend",
    "version": "1.0.0",
    "description": "Express backend for inventory system",
    "main": "dist/server.js",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc",
        "prisma:generate": "prisma generate --schema=../prisma/schema.prisma",
        "prestart": "npm run prisma:generate && npm run build",
        "start": "node dist/server.js"
    },
    "dependencies": {
        "@prisma/client": "^6.1.0",
        "bcrypt": "^6.0.0",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^22.10.2",
        "prisma": "^6.1.0",
        "tsx": "^4.7.0",
        "typescript": "^5.7.2"
    }
}